#SKHD STUFF

# brew services start skhd
# brew services start yabai

# if you're having troubles finding key codes for a key just type skhd --observe in a terminal and type a key. Pretty cool! Or just check the wiki.

## HYPER == SHIFT + CMD + ALT + OPTION

## Quickly restart the yabai launch agent
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

hyper - t : ~/dotfiles/skhd/toggleyabai.sh
hyper - a : brew services start yabai #doesnt work sad face

## open terminal
# hyper - return : /Applications/iTerm.app/Contents/MacOS/iTerm2
hyper - return : /Applications/Warp.app/Contents/MacOS/stable

## swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east # 0x21 is the "[" key
# hyper - 0x21 : yabai -m window --swap east # 0x21 is the "[" key

## got to windows
hyper - h : yabai -m window --focus west
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east # 0x21 is the "[" key

## toggle window fullscreen zoom
hyper - f : yabai -m window --toggle zoom-fullscreen

## rotate tree 90
hyper - r : yabai -m space --rotate 90

## flip the tree vertically
hyper - 4 : yabai -m space --mirror y-axis

#Move active window to next space on current display
hyper + ralt - 1 : yabai -m query --spaces --space | jq -re ".index" | xargs -I {} bash -c "if [[ '{}' = '1' ]]; then yabai -m window --space 2; elif [[ '{}' = '2' ]]; then yabai -m window --space 1; fi"
hyper + ralt - 2 : yabai -m query --spaces --space | jq -re ".index" | xargs -I {} bash -c "if [[ '{}' = '3' ]]; then yabai -m window --space 4; elif [[ '{}' = '4' ]]; then yabai -m window --space 3; fi"
hyper + ralt - 3 : yabai -m query --spaces --space | jq -re ".index" | xargs -I {} bash -c "if [[ '{}' = '5' ]]; then yabai -m window --space 6; elif [[ '{}' = '6' ]]; then yabai -m window --space 5; fi"

# toggle resize mode
hyper - left : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
hyper - down : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20
hyper - up : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
hyper - right : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0
 
#pop window
hyper - p : yabai -m window --toggle float; yabai -m window --toggle border; 
